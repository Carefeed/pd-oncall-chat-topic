# Copy this file to terraform.tfvars and fill in your values
# DO NOT commit terraform.tfvars to git (it contains secrets)

aws_region  = "us-east-1"
aws_profile = "default"
environment = "production"

# PagerDuty API key (read-only access is sufficient)
pagerduty_api_key = "u+YOUR_PAGERDUTY_API_KEY"

# Slack bot token (xoxb-...)
slack_api_key = "xoxb-YOUR-SLACK-BOT-TOKEN"

# Optional: Customize function name
# function_name = "pagerduty-oncall-chat-topic"

# Optional: Customize log retention
# log_retention_days = 7
